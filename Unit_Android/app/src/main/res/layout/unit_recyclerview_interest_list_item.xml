<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.Guideline
        android:id="@+id/recommend_Choiceness_Interest_ListItem_Vertical_Guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3333" />
    <ImageView
        android:id="@+id/recommend_Choiceness_Interest_ListItem_Image"
        android:background="@drawable/picture_place_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/recommend_Choiceness_Interest_ListItem_Vertical_Guideline"
        app:layout_constraintDimensionRatio="4:3"/>
    <TextView
        android:id="@+id/recommend_Choiceness_Interest_ListItem_Title"
        android:text="产品/方案名称"
        android:textSize="@dimen/content_item_title_text_size"
        android:maxLength="@dimen/content_item_title_text_max_length_large"
        android:textColor="@color/content_common_item_title_text_color_dark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/recommend_Choiceness_Interest_ListItem_Vertical_Guideline"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/recommend_Choiceness_Interest_ListItem_Summary"
        android:text="产品方案描述"
        android:textSize="@dimen/content_item_summary_one_text_size"
        android:maxLength="@dimen/content_item_summary_text_max_length_huge_more"
        android:textColor="@color/content_common_item_summary_text_color_dark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/recommend_Choiceness_Interest_ListItem_Title"
        app:layout_constraintLeft_toRightOf="@id/recommend_Choiceness_Interest_ListItem_Vertical_Guideline"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/recommend_Choiceness_Interest_ListItem_SupportNum"
        android:text=" 支持票数"
        android:textSize="@dimen/content_item_summary_two_text_size"
        android:maxLength="@dimen/content_item_summary_text_max_length_short"
        android:textColor="@color/content_common_item_summary_text_color_dark"
        android:drawableLeft="@drawable/support_smile_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@id/recommend_Choiceness_Interest_ListItem_Image"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/recommend_Choiceness_Interest_ListItem_Horizontal_Line"
        android:background="@color/content_common_item_divider_line_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/content_common_item_divider_line_height"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/recommend_Choiceness_Interest_ListItem_Image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>