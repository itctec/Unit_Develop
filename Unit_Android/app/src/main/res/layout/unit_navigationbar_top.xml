<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/app_Top_NavigationBar_Choiceness_Btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="精选"
        android:textColor="@color/navigation_item_selected_color"
        android:textSize="@dimen/top_navigation_bar_item_text_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/app_Top_NavigationBar_BottomLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/app_Top_NavigationBar_Attention_Btn" />

    <TextView
        android:id="@+id/app_Top_NavigationBar_Attention_Btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:gravity="center_horizontal"
        android:text="关注"
        android:textColor="@color/navigation_item_selected_color"
        android:textSize="@dimen/top_navigation_bar_item_text_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/app_Top_NavigationBar_BottomLine"
        app:layout_constraintLeft_toRightOf="@id/app_Top_NavigationBar_Choiceness_Btn"
        app:layout_constraintRight_toLeftOf="@+id/app_Top_NavigationBar_Mind_Btn"/>

    <TextView
        android:id="@+id/app_Top_NavigationBar_Mind_Btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:gravity="center_horizontal"
        android:text="想法"
        android:textColor="@color/navigation_item_selected_color"
        android:textSize="@dimen/top_navigation_bar_item_text_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/app_Top_NavigationBar_BottomLine"
        app:layout_constraintLeft_toRightOf="@id/app_Top_NavigationBar_Attention_Btn"
        app:layout_constraintRight_toRightOf="parent"/>
    <android.support.constraint.Guideline
        android:id="@+id/app_Top_NavigationBar_Bottom_Horizontal_Guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/top_navigation_bar_height" />
    <TextView
        android:id="@+id/app_Top_NavigationBar_BottomLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/content_common_item_divider_line_height"
        android:background="@color/navigation_divider_line_color"
        app:layout_constraintBottom_toTopOf="@id/app_Top_NavigationBar_Bottom_Horizontal_Guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <android.support.constraint.Guideline
        android:id="@+id/app_Top_NavigationBar_Indicator_Vertical_Guideline_One"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3333" />
    <TextView
        android:id="@+id/app_Top_NavigationBar_Indicator"
        android:layout_width="0dp"
        android:layout_height="@dimen/top_navigation_bar_indicator_line_height"
        android:background="@color/navigation_indicator_line_color"
        app:layout_constraintBottom_toTopOf="@id/app_Top_NavigationBar_Bottom_Horizontal_Guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/app_Top_NavigationBar_Indicator_Vertical_Guideline_One"/>

</android.support.constraint.ConstraintLayout>